{
    "manifest_version": 3,
    "name": "URL Blocker",
    "version": "1.0",
    "description": "Blocks specified URLs.",
    "permissions": [
        "declarativeNetRequest",
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "declarative_net_request": {
        "rule_resources": [{
            "id": "ruleset_1",
            "enabled": true,
            "path": "rules.json"
        }]
    }
}
